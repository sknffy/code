import string
import random

def genereaza_parola():
    print("--- ğŸ›¡ï¸ Bine ai venit la Generatorul de Parole 'The Vault' ---")
    
    # 1. Configurarea parametrilor
    try:
        lungime = int(input("CÃ¢te caractere sÄƒ aibÄƒ parola? (recomandat minim 12): "))
    except ValueError:
        print("Te rog introdu un numÄƒr valid!")
        return

    print("\nCe vrei sÄƒ incluzi Ã®n parolÄƒ?")
    include_cifre = input("AdÄƒugÄƒm cifre? (da/nu): ").lower() == "da"
    include_simboluri = input("AdÄƒugÄƒm simboluri (!@#$)? (da/nu): ").lower() == "da"

    # 2. Construirea setului de caractere
    caractere = string.ascii_letters  # Include litere mici È™i mari (a-z, A-Z)
    
    if include_cifre:
        caractere += string.digits    # AdaugÄƒ 0-9
    if include_simboluri:
        caractere += string.punctuation # AdaugÄƒ caractere speciale

    # 3. Generarea parolei
    parola = ""
    for i in range(lungime):
        caracter_aleatoriu = random.choice(caractere)
        parola += caracter_aleatoriu

    # 4. AfiÈ™area rezultatului
    print("\n" + "="*30)
    print(f"ğŸ”’ Parola ta generatÄƒ este: {parola}")
    print("="*30)
    
    # Evaluarea siguranÈ›ei (ScurtÄƒ logicÄƒ de control)
    if lungime < 8:
        print("âš ï¸ AtenÈ›ie: Parola este prea scurtÄƒ È™i uÈ™or de spart!")
    elif lungime >= 12 and include_cifre and include_simboluri:
        print("âœ… Excelent! Aceasta este o parolÄƒ foarte puternicÄƒ.")
    else:
        print("ğŸ’¡ Sfat: AdaugÄƒ mai multe caractere pentru siguranÈ›Äƒ maximÄƒ.")

# ApelÄƒm funcÈ›ia pentru a rula programul
genereaza_parola()
